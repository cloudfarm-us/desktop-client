{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": [
      "node", 
      "electron"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
  },
  "include": [
    "**/*",
    "**/*.js",
    "**/.eslintrc.js"
  ]
}
